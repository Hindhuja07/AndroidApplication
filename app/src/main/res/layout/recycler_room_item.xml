<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCardRoom"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/recycler_color"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:id="@+id/recRommImage"
            android:padding="8dp"
            android:src="@drawable/photo_upload" />

        <TextView
            android:id="@+id/rec_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/recRommImage"
            android:letterSpacing="0.2"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rec_room_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rec_room_name"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/recRommImage"
            android:letterSpacing="0.2"
            android:text="Location"
            android:textColor="@color/grey"
            android:textSize="20dp"
            android:drawableStart="@drawable/ic_baseline_location_on_24"
            android:drawableTint="@color/grey"
            android:drawablePadding="10dp"/>

        <TextView
            android:id="@+id/rec_room_rent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rec_room_location"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/recRommImage"
            android:text="Rent"
            android:textColor="@color/grey"
            android:textSize="20dp"
            android:drawableStart="@drawable/ic_baseline_currency_rupee_24"
            android:drawableTint="@color/grey"
            android:drawablePadding="10dp"/>

        <TextView
            android:id="@+id/rec_room_lookingFor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rec_room_rent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/recRommImage"
            android:text="Looking for"
            android:textColor="@color/grey"
            android:textSize="20dp"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawableTint="@color/grey"
            android:drawablePadding="10dp"/>
        <TextView
            android:id="@+id/rec_room_genderRequired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rec_room_lookingFor"
            android:layout_marginStart="45dp"
            android:layout_toEndOf="@+id/recRommImage"
            android:letterSpacing="0.2"
            android:text="tenant"
            android:textColor="@color/grey"
            android:textSize="20dp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>